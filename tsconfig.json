{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler", // 或者使用 "Node" 根据 Vite 版本调整
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "skipLibCheck": true,
    "types": [
      "vitepress/client",
      "node",
      "vue"
    ],
    "paths": {
      "@theme/*": ["docs/.vitepress/theme/*"]
    },
    "outDir": "dist"
  },
  "include": [
    "docs/**/*.vue",
    "docs/**/*.ts",
    "docs/.vitepress/**/*",
    "components.d.ts"
  ],
  "exclude": [
    "node_modules",
    "docs/.vitepress/cache",
    "docs/.vitepress/dist"
  ]
}
