{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@theme/*": ["docs/.vitepress/theme/*"]
    }
  },
  "include": [
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/**/*.d.ts",
    "docs/.vitepress/**/*.tsx",
    "docs/.vitepress/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "docs/.vitepress/cache",
    "docs/.vitepress/dist",
    "docs/public",
    "**/*.mjs",
    "**/*.js",
    "**/dist/**",
    "docs/.vitepress/theme/emoji/**"
  ]
}
