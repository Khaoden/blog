{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "skipLibCheck": true,
    "types": ["vitepress/client", "node", "vue"],
    "paths": {
      "@theme/*": ["docs/.vitepress/theme/*"]
    }
  },
  "include": [
    "docs/.vitepress/**/*",
    "docs/.vitepress/theme/**/*"
  ],
  "exclude": [
    "node_modules",
    "docs/.vitepress/cache",
    "docs/.vitepress/dist"
  ]
} 